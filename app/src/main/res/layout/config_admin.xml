<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/act1FrameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Opcions de l'aplicació"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="20dp"
                >
                <Button
                    android:id="@+id/openFolderJson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importar arxius .JSON des d'una carpeta"/>
                <Button
                    android:id="@+id/openFolderImagesElements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importar imatges d'elements des d'una carpeta"/>
                <Button
                    android:id="@+id/openFolderImagesGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importar imatges del joc des d'una carpeta"/>

                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tria el json d'àmbits:"/-->
                <!--Button
                    android:id="@+id/openFileButtonAmbits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cercar arxiu json d'àmbits NO PROGRAMAT"/-->
                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tria els json d'elements:"/-->
                <!--Button
                    android:id="@+id/openFileButtonElementsCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cercar arxiu json d'elements en català"/-->
                <!--Button
                    android:id="@+id/openFileButtonElementsSpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cercar arxiu json d'elements en castellà"/-->
                <!--Button
                    android:id="@+id/openFileButtonElementsEng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cercar arxiu json d'elements en anglès"/-->

                <!--Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triar àmbit i element per defecte NO PROGRAMAT"/-->

                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tria el json de preguntes:"/-->
                <!--Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cercar json de preguntes NO PROGRAMAT"/-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="10"
                        android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Tria l'àmbit que es mostrarà per defecte: "/>
                    <Spinner
                        android:id="@+id/spinnerField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credits"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonidiomas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/btn_idioma" />
            <!--Button
                android:id="@+id/BtnJsonShortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Càrrega JSON" /-->
            <Button
                android:id="@+id/btnField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Veure elements de l'àmbit" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>