<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/botonatras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/fletxaEnrere"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/act1FrameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/HeadAct6"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/botonpasar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/fletxaEndavant"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/BtnFacil"
                android:layout_width="377dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="FÀCIL"
                android:textSize="64sp"
                android:background="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:padding="20dp"/>

            <Button
                android:id="@+id/BtnNormal"
                android:layout_width="377dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/black"
                android:text="NORMAL"
                android:textSize="64sp"
                android:padding="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"/>
            <Button
                android:id="@+id/BtnDificil"
                android:layout_width="377dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="DIFÍCIL"
                android:textSize="64sp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@color/black"
                android:padding="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonidiomas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/btn_idioma" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>